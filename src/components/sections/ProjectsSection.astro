---
// Components
import Button from "../Button.astro";
import { SparklesText } from "@/components/ui/sparkles-text";

// Assets
import { Image } from "astro:assets";
import { getCollection } from "astro:content";
const projects = await getCollection("projects");
import ProfilePicture from "@/assets/images/profile-picture.png";
import arrowRight from '../../assets/icons/arrow-right.svg';
const pinnedProjects = projects.filter((project) => project.data.pin);

---

<div class="head">
  <h2 class="inline-flex items-center gap-2">Mes projets <span><SparklesText className="sparkles" client:load sparklesCount={5} colors={{ first: '#C8179B', second: '#E32E45' }} text="pÃ©pites" /></span></h2>
