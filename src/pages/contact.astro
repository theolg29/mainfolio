    Cal.ns.decouverte("inline", {
      elementOrSelector:"#my-cal-inline",
      config: {"layout":"month_view"},
      calLink: "theolg/decouverte",
    });

    Cal.ns.decouverte("ui", {"hideEventTypeDetails":false,"layout":"month_view"});
